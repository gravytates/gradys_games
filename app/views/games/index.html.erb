<h2>All Games</h2>

<% if current_user && current_user.admin %>
  <h5>Admin Action: <%= link_to "Add New Game", new_game_path %></h5>
  <hr>
<% end %>


<table class="table">
    <thead>
      <tr>
        <th>Game Name</th>
        <th>Platform</th>
        <th>Genre</th>
        <th>Reviews</th>
        <th>Price</th>
        <!-- <th>Average Rating</th> -->
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><h4><em><%= link_to game.name, game_path(game) %></em></h4></td>
          <td><%= game.platform %></td>
          <td><%= game.genre %></td>
          <td><%= game.reviews.length %></td>
          <td>$<%= game.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
